@model CompanyViewModel

<h2>Add Company</h2>

@using (Html.BeginForm("AddCompany", "Company", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="CompanyName"></label>
        <input asp-for="CompanyName" class="form-control" data-val="true" required data-val-required="The Company Name field is required." />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumContacts"></label>
        <input asp-for="NumContacts" class="form-control" data-val="true" required data-val-required="The Number of Contacts field is required." />
        <span asp-validation-for="NumContacts" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaxContactAge"></label>
        <input asp-for="MaxContactAge" class="form-control" data-val="true" required data-val-required="The Maximum Contact Age field is required." />
        <span asp-validation-for="MaxContactAge" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Company</button>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
